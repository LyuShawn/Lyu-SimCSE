    "version": "0.2.0",
    "configurations": [


        {
            "name": "Python 调试程序: 包含参数的当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "SimCSE Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "args": [
                "--output_dir", "result/debug", "--debug_mode",
                "--do_train", 
                "--do_eval",
                // "--overwrite_cache",
                "--do_prompt_enhancement",
                "--sample_data","10000",
                "--do_knowledge_fusion",
                "--prompt_template", "The phrase '{sentence}' may relate to [KNOWLEDGE], thus [MASK] is implied.",
                "--per_device_train_batch_size", "32",
                "--eval_steps", "25",
                "--knowledge_fusion_type", "fusion_loss",
                // "--prompt_template", "This sentence of '{sentence}' may about {title}, so it means [MASK].",
                "--eval_template", "This sentence : '{sentence}' means [MASK].",
                // "--mask_prompt"
            ],
            "justMyCode": false
        },
        {
            "name": "Eval Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/evaluation.py",
            "console": "integratedTerminal",
            "args": [
                "--path", "princeton-nlp/unsup-simcse-bert-base-uncased"
            ],
            "justMyCode": false
        }
    ]
}